<div class="sign-up">


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<h1 class="sign-up-title">Log In</h1>
  <div class="form-inputs">
    <%= f.input :email, label: false, :placeholder => "Email", required: false, autofocus: true %>
    <%= f.input :password, label: false, :placeholder => "Password", required: false %>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  

  <div class="form-actions">
    <%= f.button :submit, "Log in", :class => "sign-up-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
