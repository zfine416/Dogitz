
<div class="row">
<div class="sign-up col m8 s8 l4 offset-s2 offset-m2 offset-l4">


	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<h1 class="sign-up-title">Log In</h1>
	<div class="form-inputs">
		<p class="alert">
			<%= alert %>
		</p>
		<%= f.input :email, label: false, :placeholder => "Email", required: false, autofocus: true %>
		<%= f.input :password, label: false, :placeholder => "Password", required: false %>
	</div>
	<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	

	<div class="form-actions">
		<%= f.button :submit, "Log in", :class => "sign-up-button" %>
	</div>
	<% end %>

	<%= render "devise/shared/links" %>
	<br>
</div>
</div>
